include ../advantages/advantages.mixin.pug

section.banner.bannerRs
    .wrapper
        .bannerFlexContainer
            .bannerText
                h1.page__title-h1_big RSCHIP
                h1.page__title-h1
                    span.page_red Better acceleration 
                    | <br> with RS Response 
                p.pageText Better acceleration and sportier thotlle response for your Car
                include ../socialIcons/socialIcons.component.pug
            
            .advantages
                .advantagesFlexContainer
                    +itemsAdvantages([
                        {
                            "icon":"iconSpeedometer", 
                            "text":"Better throttle response"
                        }, 
                        {
                            "icon":"iconArrowsUp", 
                            "text": "5 stages"
                        },
                        {
                            "icon":"iconPhoneWhite", 
                            "text": "2nd backup CPU"
                        },
                        {
                            "icon":"iconArrowsLR", 
